@model IEnumerable<WebAPI.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<div class="p-4">
    <div>
        <div class="container">
            <div class="p-2">
                <div class="row">
                    <div class="col-12">
                        <h6>Cadastrando recordes de vendas</h6>
                    </div>
                    <div class="col-10">
                        <button type="button" class="btn btn-outline-info novaVenda" id="novaVenda">Atribuir recorde de vendas</button>
                    </div>
                    <br><br>
                    <div class="p-3 col-10 divTab" id="divTab">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="moodal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="moodal-title">Cadastro de recorde de vendas</h5>
            </div>

            <div class="modal-body">
                <input type="hidden" class="form-control form-control-sm vendasID" id="vendasID" />
                <div>
                    <label>Data da venda</label>
                    <input type="text" class="form-control form-control-sm vendadt" id="vendadt" />
                    <span class="text-warning errovendadt d-none"></span>
                </div>
                <div>
                    <label>Valor recorde da venda </label>
                    <input type="text" class="form-control form-control-sm venval" id="venval" />
                    <span class="text-warning errovenval d-none"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger botnSalvar">Salvar</button>
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
